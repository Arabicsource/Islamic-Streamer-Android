<?xml version="1.0" encoding="utf-8"?>
    <com.android.QuranSteaming.SurahListItem android:id="@+id/surahListItem1" 
    android:layout_width="fill_parent" android:layout_height="fill_parent" 
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <TextViewz
        android:layout_x="0pt"
        android:layout_y="5pt"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:focusable="false" android:focusableInTouchMode="false"
        android:id="@+id/tvSurahName" />
        <TextView
        android:layout_x="25pt"
        android:layout_y="5pt"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/tvSurahId"
        android:textColor="#FFFFFF"
        android:visibility="invisible" />
        <CheckBox
        android:layout_x="120pt"
        android:layout_y="0pt"
        android:id="@+id/cbListViewItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:saveEnabled="true"
        android:focusable="false" android:focusableInTouchMode="false"
        android:checked="false"/>
        <ImageView 
        android:src="@drawable/playing2"
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_x="110pt"
        android:saveEnabled="true"
        android:layout_y="11pt"
        android:id="@+id/ivImg"
        android:visibility="invisible"
        />
    
    </com.android.QuranSteaming.SurahListItem>

